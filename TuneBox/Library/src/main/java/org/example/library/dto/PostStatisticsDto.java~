package org.example.library.dto;

import lombok.Builder;
import lombok.Data;

import java.util.Map;

@Data
@Builder
public class PostStatisticsDto {
    private long totalPosts;
    private long postsWithImages;
    private long postsWithoutImages;
    private long hiddenPosts;
    private double averageLikesPerPost;
    private double averageCommentsPerPost;
    private long totalLikes;
    private long totalComments;
    private long postsLastWeek;
    private long postsLastMonth;
    private long totalReportedPosts;
    private long pendingReports;
    private long resolvedReports;
    private long dismissedReports;
    private Map<String, Long> reportReasonCount;
    private long reportsLastWeek;
    private long reportsLastMonth;
    private double averageResolveTime;
}
